 {% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Inscription "
     {% endblock %}


     {% block title %} 
         Inscription
     {% endblock %}

     {% block stylesheets %}

       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
       <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
       <link rel="stylesheet" href="/style_register.css">
       <link rel="stylesheet" href="/style.css">
       
     {% endblock %}

     
    

     {% block body %}

         {# Balise div pour remplacer balise body de l'exemple: https://getbootstrap.com/docs/5.0/examples/sign-in/ #}
         <div id="body" class="text-center"> 

             <main>

                 {# Conteneur du titre du formulaire #}
                 <div class="py-5 text-center">

                   {# Image du formulaire #}
                   <img class="d-block mx-auto mb-4" src="/logoGrand.webp" alt="Logo du site" width="72" height="57">

                     {# Titre du formulaire  #}
                     <h2> Formulaire d'Inscription </h2>

                       {# Phrase d'accroche du formulaire #}
                       <p class="lead"> 
                         Inscrivez-vous gratuitement pour créer un compte et accéder au contenus du site. 
                       </p>

                 </div>

                 <div class="row g-3">

                   <div class="col-12">

                     {# Titre de la section #}
                     <h4 class="mb-3"> Votre profil </h4>

                     {{ form_start(registrationForm,
                         {'attr':{
                         'class':'needs-validation',
                         'novalidate':''
                         }})
                     }}

                     {# <form class="needs-validation" novalidate> #}

                     {# ********** CHAMP PRENOM ********** #}

                     <div class="row g-3">

                         {# Conteneur de la partie prénom #}
                         <div class="col-sm-6">   
                                
                             {# *** LABEL *** #}
                             {{form_label
                                 (registrationForm.firstname,
                                     'Prénom'
                                 )
                             }}
                             
                             {# <label for="firstName" class="form-label"> Prénom </label> #}

                             {# *** INPUT *** #}
                             {{form_widget
                                 (registrationForm.firstname,
                                   {
                                     'attr': {'placeholder':'Entrez votre prénom',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                             {# <input type="text" class="form-control" id="firstName" placeholder="" value="" required> #}

                             {# *** IF ERROR *** #}
                             <div class="invalid-feedback">
                               Le champ prénom est requis.
                               {{form_errors(registrationForm.firstname)}}
                             </div>
                             {{form_errors(registrationForm.firstname)}}
                              
                               {# <div class="invalid-feedback">Valid first name is required.</div> #}

                         {# Fin de Conteneur de la partie prénom #}
                         </div>

                     {# ********** CHAMP NOM ********** #}

                         {# Conteneur de la partie nom #}
                         <div class="col-sm-6">
                         
                             {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.lastname,
                                     'Nom'
                                 )
                               }}

                           {# <label for="lastName" class="form-label">Nom</label> #}

                             {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.lastname,
                                   {
                                     'attr': {'placeholder':'Entrez votre Nom',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                           {# <input type="text" class="form-control" id="lastName" placeholder="" value="" required> #}

                             {# *** IF ERROR *** #}

                               <div class="invalid-feedback">
                                 Le champ Nom est requis.
                                 {{form_errors(registrationForm.lastname)}}
                               </div>
                                {{form_errors(registrationForm.lastname)}}
                             
                               {# <div class="invalid-feedback"> Valid last name is required. </div> #}

                         {# Fin de Conteneur de la partie nom #}      
                         </div>

                     {# ********** CHAMP PSEUDO ********** #}

                         {# Conteneur de la partie pseudo #}
                         <div class="col-12">   
                                
                             {# *** LABEL *** #}

                             {{form_label
                                 (registrationForm.login,
                                     'Pseudo'
                                 )
                             }}

                           {# <label for="username" class="form-label"> Pseudo </label> #}

                           <div class="input-group has-validation">
                            
                             <span class="input-group-text"> @ </span>

                             {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.login,
                                   {
                                     'attr': {'placeholder':'Entrez votre pseudo',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                             {# <input type="text" class="form-control" id="username" placeholder="Username" required> #}

                           <div class="invalid-feedback">
                              Your username is required.
                           </div>
                           
                           </div>

                         {# Fin de Conteneur de la partie pseudo #}
                         </div>

                       {# ********** CHAMP EMAIL ********** #}

                         {# Conteneur de la partie Email #}
                         <div class="col-sm-6">
                         
                         {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.email.first,
                                     'Adresse électronique'
                                 )
                               }}

                           {# <label for="lastName" class="form-label">Nom</label> #}

                         {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.email.first,
                                   {
                                     'attr': {'placeholder':'Entrez votre adresse électronique',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                         {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ Email est requis.
                               {{form_errors(registrationForm.email.first)}}
                             </div>
                              {{form_errors(registrationForm.email.first)}}

                         {# Fin de Conteneur de la partie Email #}                       
                         </div>

                         {# ********** CHAMP EMAIL CONFIRMATION ********** #}

                         {# Conteneur de la partie Email #}
                         <div class="col-sm-6">
                         
                         {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.email.second,
                                     'Confirmer votre email'
                                 )
                               }}

                           {# <label for="lastName" class="form-label">Nom</label> #}

                         {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.email.second,
                                   {
                                     'attr': {'placeholder':'Confirmer votre adresse électronique',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                         {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ Email est requis.
                               {{form_errors(registrationForm.email.second)}}
                             </div>
                              {{form_errors(registrationForm.email.second)}}

                         {# Fin de Conteneur de la partie Email #}                       
                         </div>

                       {# ********** CHAMP ADRESSE **********

                         {# Conteneur de la partie Email #}
                         <div class="col-sm-6">

                         {# *** LABEL *** #}

                               {# {{form_label
                                 (registrationForm.address,
                                     'Adresse'
                                 )
                               }}

                           <label for="lastName" class="form-label">Nom</label>

                         *** INPUT ***

                               {{form_widget
                                 (registrationForm.address,
                                   {
                                     'attr': {'placeholder':'Entrez votre adresse',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                          *** IF ERROR ***

                             <div class="invalid-feedback">
                               Le champ adresse est requis.
                               {{form_errors(registrationForm.address)}}
                             </div>
                             {{form_errors(registrationForm.address)}}
                                                
                         </div>  #}

                       {# ********** CHAMP PSEUDO ********** #}

                         <div class="col-12">

                           <label for="address2" class="form-label"> Address 2 <span class="text-muted">(Optional)</span></label>
                           <input type="text" class="form-control" id="address2" placeholder="Apartment or suite">

                         </div>

                         <hr class="my-4">

                         <button class="w-100 btn btn-primary btn-lg" type="submit">
                           S'incrire
                         </button>

                         {{ form_end(registrationForm) }}
                         {# </form> #}


                         </div>

                </div>

            </main>

        </div>



        <script src="form-validation.js"></script>
        

     {% endblock %}
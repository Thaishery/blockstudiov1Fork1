 {% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Inscription "
     {% endblock %}

     {% block title %} 
         Inscription
     {% endblock %}

     {% block stylesheets %}

       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
       <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap">
       <link rel="stylesheet" href="/style_register.css">
       <link rel="stylesheet" href="/style.css">
       
     {% endblock %}

     {% block body %}

         {# Balise div pour remplacer balise body de l'exemple: https://getbootstrap.com/docs/5.0/examples/sign-in/ #}
         <div id="body" class="text-center"> 

             <main class="col-9">
                {{ form_start(registrationForm,
                         {'attr':{
                         'class':'needs-validation',
                         'novalidate':''
                         }})
                     }}
                 {# Conteneur du titre du formulaire #}
                 <div class="py-5 text-center">

                   {# Image du formulaire #}
                   <img class="d-block mx-auto mb-4" src="/logoGrand.webp" alt="Logo du site" width="72" height="57">

                     {# Titre du formulaire  #}
                     <h2> Formulaire d'Inscription </h2>

                       {# Phrase d'accroche du formulaire #}
                       <p class="lead"> 
                         Inscrivez-vous gratuitement pour créer un compte et accéder au contenus du site. 
                       </p>

                 {# Fin du Conteneur: titre du formulaire #}
                 </div>

                   {# Conteneur du champ titre  #}
                   <div class="col-12">

                     <h4 class="mb-3"> Votre profil </h4>

                     <div class="row g-3">

                     {# ********** CHAMP PSEUDO ********** #}

                         <div class="col-12">   
                                
                             {# *** LABEL *** #}

                             {{form_label
                                 (registrationForm.login,
                                     'Pseudo'
                                 )
                             }}

                           <div class="input-group has-validation">
                            
                             <span class="input-group-text"> @ </span>

                             {# *** INPUT *** #}

                             {# {{form_widget
                                 (registrationForm.login,
                                   {
                                     'attr': {'placeholder':'Entrez votre pseudo',
                                     'class':'form-control',
                                     'pattern':'[a-zA-Z0-9]',
                                     'title':'Votre pseudo dois etre composer uniquement de chiffres et de lettre, majuscules accepté.'
                                   }}
                                 ) 
                             }} #}
                             {{form_widget
                                 (registrationForm.login,
                                   {
                                     'attr': {'placeholder':'Entrez votre pseudo',
                                     'class':'form-control',
                                     }}
                                 ) 
                             }}

                              <div class="invalid-feedback">
                                  Le champ pseudo est requis.
                                   {{form_errors(registrationForm.login)}}
                              </div>
                              {{form_errors(registrationForm.login)}}
                           
                           </div>

                         </div>

                     {# ********** CHAMP PRENOM ********** #}   
                      
                         <div class="col-sm-6">   
                                
                             {# *** LABEL *** #}
                             {{form_label
                                 (registrationForm.firstname,
                                     'Prénom'
                                 )
                             }}

                             {# *** INPUT *** #}
                             {{form_widget
                                 (registrationForm.firstname,
                                   {
                                     'attr': {'placeholder':'Entrez votre prénom',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                             {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ prénom est requis.
                               {{form_errors(registrationForm.firstname)}}
                             </div>
                             {{form_errors(registrationForm.firstname)}}
                    
                         </div>

                     {# ********** CHAMP NOM ********** #}
                   
                         <div class="col-sm-6">
                         
                             {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.lastname,
                                     'Nom'
                                 )
                               }}

                             {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.lastname,
                                   {
                                     'attr': {'placeholder':'Entrez votre Nom',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                             {# *** IF ERROR *** #}

                               <div class="invalid-feedback">
                                 Le champ nom est requis.
                                 {{form_errors(registrationForm.lastname)}}
                               </div>
                                {{form_errors(registrationForm.lastname)}}
                                                        
                         </div>
                   
                       {# ********** CHAMP EMAIL ********** #}
                        
                         <div class="col-sm-6">
                         
                         {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.email.first,
                                     'Adresse électronique'
                                 )
                               }}

                         {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.email.first,
                                   {
                                     'attr': {'placeholder':'Entrez votre adresse électronique',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                         {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ email est requis.
                               {{form_errors(registrationForm.email.first)}}
                             </div>
                              {{form_errors(registrationForm.email.first)}}
                      
                         </div>

                         {# ********** CHAMP EMAIL CONFIRMATION ********** #}
                       
                         <div class="col-sm-6">
                         
                         {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.email.second,
                                     'Confirmer votre email'
                                 )
                               }}

                         {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.email.second,
                                   {
                                     'attr': {'placeholder':'Confirmer votre adresse électronique',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                         {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ Email est requis.
                               {{form_errors(registrationForm.email.second)}}
                             </div>
                              {{form_errors(registrationForm.email.second)}}
                                    
                         </div>

                        {# ********** CHAMP PASSWORD ********** #}

                         <div class="col-sm-6">
                         
                         {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.plainPassword.first,
                                     'Mot de passe'
                                 )
                               }}

                         {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.plainPassword.first,
                                   {
                                     'attr': {'placeholder':'Entrez votre mot de passe',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                         {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ mot de passe est requis.
                               {{form_errors(registrationForm.plainPassword.first)}}
                             </div>
                              {{form_errors(registrationForm.plainPassword.first)}}
                                              
                         </div>

                         {# ********** CHAMP PASSWORD CONFIRMATION ********** #}
                    
                         <div class="col-sm-6">
                         
                         {# *** LABEL *** #}

                               {{form_label
                                 (registrationForm.plainPassword.second,
                                     'Confirmer votre mot de passe'
                                 )
                               }}

                         {# *** INPUT *** #}

                             {{form_widget
                                 (registrationForm.plainPassword.second,
                                   {
                                     'attr': {'placeholder':'Confirmer votre mot de passe',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                         {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ confirmer votre mot de passe est requis.
                               {{form_errors(registrationForm.plainPassword.second)}}
                             </div>
                              {{form_errors(registrationForm.plainPassword.second)}}
                                            
                         </div>

                       {# ********** CHAMP ADRESSE **********
                         
                         {# *** LABEL *** #}

                                {{form_label
                                 (registrationForm.address,
                                     'Adresse'
                                 )
                               }}

                         {# *** INPUT *** #}

                               {{form_widget
                                 (registrationForm.address,
                                   {
                                     'attr': {'placeholder':'Entrez votre adresse. Exemple: 123 Rue de la liberté 00000 VILLE',
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}

                          {# *** IF ERROR *** #}

                             <div class="invalid-feedback">
                               Le champ adresse est requis.
                               {{form_errors(registrationForm.address)}}
                             </div>
                             
                             {{form_errors(registrationForm.address)}}                                               

                       {# ********** CHAMP ADRESSE ********** #}

                         <hr class="my-4">

                       {# ********** CHAMP AVATAR ********** #}

                        {{form_label(registrationForm.avatar, ' Photo de profil')}}

                                {{form_widget
                                 (registrationForm.avatar,
                                   {
                                     'attr': {
                                     'class':'form-control',
                                   }}
                                 ) 
                             }}
                            
                         <hr class="my-4">                                           

                         <div class="col-12">
                          
                       {# ********** CHAMP AGREE TERMS ********** #}

                            {{form_label(registrationForm.agreeTerms, 'Veuillez accepter nos conditions :')}}

                                {{form_widget
                                 (registrationForm.agreeTerms,
                                   {
                                     'attr': {
                                     'class':'form-check-input',
                                   }}
                                 ) 
                             }}

                                {# If Errors #}
                              <div class="invalid-feedback">
                               Le champ validation des conditions est requis.
                               {{form_errors(registrationForm.agreeTerms)}}
                             </div>
                             {{form_errors(registrationForm.agreeTerms)}}
                            
                          </div>

                         {# <button class="w-100 btn btn-primary btn-lg" type="submit"> #}
                         <button class="btn btn-primary btn-lg btn-block" type="submit">                     
                           S'incrire
                         </button>
                         
                         {{ form_end(registrationForm) }}

                         </div>              

            </main>

        </div>

        <script src="form-validation.js"></script>

     {% endblock %}
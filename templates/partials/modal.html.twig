 <!-- *** MODAL CONNEXION *** -->
<div>
             <div class="connection col-1 row">

                 <!-- <h2> Basic Modal Example </h2> -->
 
                     <!-- Active le modal avec un bouton -->
                     <button type="button" class="btn btn-info btn-lg col-2" data-toggle="modal" data-target="#myModal"> üè† Connection </button>

                 <!-- *** Modal *** -->
                 <div class="modal fade" id="myModal" role="dialog">
 
                     <div class="modal-dialog">
                     
                         <!-- *** Modal content *** -->
                         <div class="modal-content">
 
                             <!-- * Modal header * -->
                             <div class="modal-header">
                   
                                 <!-- &times; -->
                                 <div class="col-9">
                                     <h4 class="modal-title"> üè† Menu de connection </h4>
                                 </div>

                                 <div class="col-3">
                                     <button  type="button" class="close" data-dismiss="modal" style="display:block; position:relative; right:3px;"> ‚ùå </button>
                                 </div>
    
                             </div>
 
                             <!-- * Modal body * -->
                             <div class="modal-body" >

                                 {# ***** BODY ***** #}
                                 <body id="loginStyle" class="text-center">
    
                                     <main class="form-signin">

                                         <form method="post" action="{{ path ("app_login") }}">

                                         {# *** MESSAGE ERREUR *** #}
                                         {% if error is defined %}

                                             <div class="alert alert-danger">
                                                 {{ error.messageKey|trans(error.messageData, 'security') }} 
                                             </div>

                                         {% endif %}

  
                                         {# *** SI L'UTILISATEUR EST AUTHENTIFI√â *** #}
                                         {% if app.user %}

                                             <div class="mb-3">
                            
                                                 Vous etes connecter en tant que {{ app.user.username }},
                                                 <a href="{{ path('app_logout') }}"> Se d√©connecter </a>
                            
                                             </div>

                                         {% endif %}

                         
                                         {# *** *** *** IMAGE: LOGO DU SITE *** *** *** #}
                                         <img class="mb-4" src="/logoGrand.webp" alt="" width="72" height="57">
                                         
                                             <h1 class="h3 mb-3 font-weight-normal"> Se connecter </h1>
                         
                                                 <label for="inputLogin" class="visually-hidden"> Pseudo </label>
                                                 <input  type="text"  name="login" id="inputLogin" class="form-control"  placeholder="Email address" required autofocus>
                                                         
                                                 <label for="inputPassword" class="visually-hidden"> Mot de passe </label>
                                                 <input  type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required=""> 
                           
                                                 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                      
                                                 <button class="btn btn-primary btn-lg btn-block" type="submit"> 
                                                     Se connecter 
                                                 </button> </br>            
                    
                                                 <p>
                                                     {# Tu n'as pas encore cr√©er de compte ? #} 
                                                     <a class="btn btn-primary btn-lg btn-block" href="{{ path ('app_register') }}"> Cr√©er un compte </a>
                                                 </p>
                    
                                         </form>
                    
                                     </main>

                                     {#
                                         Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                         See https://symfony.com/doc/current/security/remember_me.html
                                     #}
      
                                 </body>

                             </div>
                        
                             <!-- * Modal footer * -->
                             <div class="modal-footer">
                                 <button type="button" class="btn btn-default" data-dismiss="modal"> Fermer </button>
                             </div>

                         </div>
 
                     </div>
              
                 </div>

             </div>


               <!-- ***** SCRIPT JS ***** -->

                 <script type="text/javascript" src="popover.js"></script>            

{% extends 'base.html.twig' %}


     {% block metaTitle %}
         " Gestion des utilisateurs "
     {% endblock %}


     {% block title %} 
         Gestion des utilisateurs
     {% endblock %}

     {% block body %}

         <h1 class="h3 mb-3 font-weight-normal"> Gestion des utilisateurs </h1>

             <table class="table table-dark">

                 <thead class="thead-light">

                     <tr>
                         <th> Id </th>       
                         <th> Pseudo </th>
                         <th> Nom </th>
                         <th> Prénom </th>
                         <th> Addresse </th>
                         <th> Téléphone </th>
                         <th> Email </th>
                         <th> Avatar </th>
                         <th> Roles </th>
                         <th> Actions </th>
                         {# <th>Password</th> #}
                     </tr>

                 </thead>

                 <tbody>

                     {% for user in users %}

                         <tr>
                             <td>{{ user.id }}</td>
                             <td>{{ user.login }}</td>
                             <td>{{ user.lastname }}</td>
                             <td>{{ user.firstname }}</td>
                             <td>{{ user.address }}</td>
                             <td>{{ user.phone }}</td>
                             <td>{{ user.email }}</td>     
                             <td>{{ user.avatar }}</td>
                             <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                             {# <td>{{ user.password }}</td> #}

                                 <td>

                                     <a class="btn btn-outline-primary" href="{{ path('user_show', {'id': user.id}) }}"> Voir </a>
                                     <a class="btn btn-outline-primary" href="{{ path('user_edit', {'id': user.id}) }}"> Modifier </a>

                                 </td>

                         </tr>

                     {% else %}

                         <tr>
                             <td colspan="11"> Aucune correspondance </td>
                         </tr>

                     {% endfor %}

                 </tbody>

             </table>

     <a class="btn btn-primary btn-lg btn-block" href="{{ path('user_new') }}"> Créer un nouvel utilisateur </a>

 {% endblock %}
